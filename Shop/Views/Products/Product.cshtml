@using Shop.Models
@model ProductModel

<a href="#x" class="overlay" id="win@(Model.Id)"></a>
    <div class="popup">
        <div class="gallery" id="gallery@(Model.Id)">
            <img src="~/ProductImages/@Model.MainImageName" alt="" class="main-img">
            <ul>
                @foreach(var image in @Model.ImageNames)
                {<li><img src="~/ProductImages/Thumb/@image" alt=""></li>}
            </ul>
        </div>
        <div class="description" style="margin: 50px 20px auto 550px">
            <h2>@Model.Name</h2>  
            <p>@Model.Description</p>            
        </div>
        <div class="buyblock" style="margin:120px 20px auto 550px">
            <p>
                <select id="sizes@(Model.Id)">
                    @foreach(var price in @Model.Prices)
                    {
                        <option sizeid="@price.SizeId" price="@price.Price" >@price.SizeName</option>}
                </select>
            </p>
            <p><span id="price@(Model.Id)">1200</span><img style="max-width:25px;" src="data:image/png;base64,"></p>
            <p>
                <div class ="buybutton" productid="@Model.Id" id="buy_button@(Model.Id)" style="display: inline-block;
                margin: 0px 10px;
                font-size: 18px;
                color: white;
                background-color: green;
                border-radius: 10px;
                padding: 5px 20px;
                font-family: nautilus_pompiliusregular, Arial;
                cursor:pointer;
                ">Купить</div>
            </p>

        </div>
        @*<a class="close" title="Закрыть" href="#close"></a>*@
        <div class="close" title="Закрыть"></div>
    </div>
